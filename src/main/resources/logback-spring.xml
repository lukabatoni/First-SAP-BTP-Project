<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <!-- Only active when SPRING_PROFILES_ACTIVE=cloud -->
  <appender name="STDOUT-JSON" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="com.sap.hcp.cf.logback.encoder.JsonEncoder"/>
  </appender>

  <root level="INFO">
    <appender-ref ref="STDOUT-JSON"/>
  </root>

  <!-- adjust your packages as needed -->
  <logger name="com.sap.cloud.sdk" level="INFO"/>
  <logger name="com.example.java_tutorial" level="DEBUG"/>

  <!-- default (local) logging configuration omitted for brevity -->
</configuration>
